<Window x:Class="BankApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="نظام البنك - عميل"
        Height="720" Width="1200" WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#9C88FF" Offset="0"/>
            <GradientStop Color="#D3CCE3" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- الشريط الجانبي -->
            <ColumnDefinition Width="*"/>
            <!-- المحتوى الرئيسي -->
        </Grid.ColumnDefinitions>

        <!-- الشريط الجانبي -->
        <StackPanel Background="#5A4EAE" VerticalAlignment="Stretch" Margin="0" >
            <TextBlock Text="🏦 Bank Loyality"
                       FontSize="22" FontWeight="Bold" Foreground="White" Margin="20"/>
            <Separator Margin="10"/>
            <TextBlock Text="👤 أحمد الزهراني" FontSize="16" Foreground="White" Margin="20,0"/>
            <Button Content="الصفحة الرئيسية" Margin="20,10,20,0" Foreground="#5A4EAE" FontWeight="Bold"/>
            <Button Content="السجل" Margin="20,10,20,0" Foreground="#5A4EAE" FontWeight="Bold"/>
            <Button Content="الإعدادات" Margin="20,10,20,0" Foreground="#5A4EAE" FontWeight="Bold"/>
        </StackPanel>

        <!-- المحتوى الرئيسي -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Margin="30">

                <!-- العنوان -->
                <TextBlock Text="لوحة عميل البنك"
                           FontSize="34" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Left" Margin="0,0,0,30"/>

                <!-- الرصيد ومعلومات الحساب -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="White" CornerRadius="15" Padding="20" Margin="10"
                            Grid.Column="0" Height="160">
                        <StackPanel>
                            <TextBlock Text="💰 الرصيد الحالي" FontSize="22" FontWeight="Bold" Foreground="#2ECC71"/>
                            <TextBlock Text="25,000.00 $" FontSize="28" FontWeight="Bold" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="15" Padding="20" Margin="10"
                            Grid.Column="1" Height="160">
                        <StackPanel>
                            <TextBlock Text="📄 معلومات الحساب" FontSize="22" FontWeight="Bold" Foreground="#4B3F72"/>
                            <TextBlock Text="رقم الحساب: 1234 5678 9012 3456" Margin="0,10,0,0"/>
                            <TextBlock Text="الاسم: أحمد الزهراني"/>
                            <TextBlock Text="نوع الحساب: توفير"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- الإيداع والسحب -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="White" CornerRadius="15" Padding="20" Margin="10"
                            Grid.Column="0" Height="170">
                        <StackPanel>
                            <TextBlock Text="➕ إيداع" FontSize="22" FontWeight="Bold" Foreground="#2ECC71"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Width="200" Height="35" Margin="0,0,10,0"/>
                                <Button Content="إيداع" Width="100" Height="35"
                                        Background="#2ECC71" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="15" Padding="20" Margin="10"
                            Grid.Column="1" Height="170">
                        <StackPanel>
                            <TextBlock Text="➖ سحب" FontSize="22" FontWeight="Bold" Foreground="#E74C3C"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Width="200" Height="35" Margin="0,0,10,0"/>
                                <Button Content="سحب" Width="100" Height="35"
                                        Background="#E74C3C" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- المكافآت وآخر عملية -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="White" CornerRadius="15" Padding="20" Margin="10"
                            Grid.Column="0" Height="140">
                        <StackPanel>
                            <TextBlock Text="🎁 نقاط المكافآت" FontSize="22" FontWeight="Bold" Foreground="#F39C12"/>
                            <TextBlock Text="النقاط: 1,200" FontWeight="Bold" Margin="0,10,0,0"/>
                            <TextBlock Text="صالحة حتى: 31/12/2025" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="15" Padding="20" Margin="10"
                            Grid.Column="1" Height="140">
                        <StackPanel>
                            <TextBlock Text="⏱️ آخر عملية" FontSize="22" FontWeight="Bold" Foreground="#34495E"/>
                            <TextBlock Text="سحب - 500.00 $" FontWeight="Bold" Margin="0,10,0,0"/>
                            <TextBlock Text="10:22 ص - 18 أبريل 2025" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
