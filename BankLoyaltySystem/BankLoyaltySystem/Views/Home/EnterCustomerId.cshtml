@{
    ViewData["Title"] = "إدخال رقم العميل";
}
@model BankLoyaltySystem.Models.Customer


<div class="container my-5">
    <div class="card shadow-lg rounded-4 p-4 text-center">
        <h3 class="mb-4">أدخل رقم العميل</h3>

        <form asp-action="EnterCustomerId" method="post" class="mx-auto" style="max-width: 400px;">
            <input type="number" name="customerId" class="form-control form-control-lg mb-3" placeholder="رقم العميل" required />
            <button type="submit" class="btn btn-primary btn-lg w-100">دخول</button>
        </form> 
    </div>
</div>
