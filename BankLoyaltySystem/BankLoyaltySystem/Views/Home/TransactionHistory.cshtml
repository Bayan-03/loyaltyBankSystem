@model List<BankLoyaltySystem.Models.ViewModels.TransactionHistoryViewModel>

@{
    ViewData["Title"] = "كشف الحساب";
    var stcMain = "#8300E9";  // بنفسجي STC
    var stcAccent = "#00C896"; // أخضر STC
}

<div class="container my-5">
    <h2 class="text-center mb-4" style="color:@stcMain">كشف الحساب</h2>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <label>فلترة بالتاريخ:</label>
            <input type="date" class="form-control d-inline-block w-auto" />
        </div>
        <button class="btn" style="background-color:@stcMain; color:white;">تصدير PDF</button>
    </div>

    <div class="card shadow p-3 mb-4">
        <h4 style="color:@stcAccent">إجمالي الرصيد: 10,000 ريال</h4>
    </div>

    <table class="table table-hover table-bordered text-center">
        <thead style="background-color:@stcMain; color:white;">
            <tr>
                <th>النوع</th>
                <th>المبلغ</th>
                <th>التاريخ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td style="color:@(transaction.TransactionType == "إيداع" ? stcAccent : "red")">
                        @transaction.TransactionType
                    </td>
                    <td>@transaction.Amount.ToString("N2") ريال</td>
                    <td>@transaction.Date.ToString("yyyy/MM/dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
